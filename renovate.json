{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "on friday"
  ],
  "timezone": "Europe/Dublin",
  "prHourlyLimit": 0,
  "branchPrefix":"features/",
  "additionalBranchPrefix":"update/",
  "baseBranches": [
    "features/commits"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ]
}
